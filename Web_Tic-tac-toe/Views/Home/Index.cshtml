@model List<Web_Tic_tac_toe.Models.EF.Room>


    @Html.Partial("_LoginPartial")
    


<div>
    
   
    @*<div class="photo">
        <img src="..\Content\Images\ttt1.jpg" />
    </div>*@

    <div>
        <h4>Доступные комнаты:</h4>
    </div>

    <div id="myDiv"></div>

    <div>
        @{
            foreach (var item in Model)
            {
                if (item.User1 != null)
                {
                    <ul>
                        <li class="my-margin">
                            <a href="#">@item.User1.UserEmail</a>
                        </li>
                    </ul>
                }
            }
        }
    </div>

    <hr />

    <div>
        @Html.ActionLink("Создать комнату", "AddRoom", "Home", null, new { @class = "btn btn-info" })
    </div>

    <hr />
    <input type="button" id="sendMessage" value="Send"/>

</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.1.2.js"></script>
<script src="signalr/hubs"></script>
<script type="text/javascript"></script>

<script>
    //alert("!");
    $(function () {
        alert("!");
        var hub = $.connection.roomsHub;
        hub.client.broadcastMessage = function (str) {
            $('#myDiv').append('<p>' + str + '<p>');
            alert(str);
        }

        $.connection.hub.start().done(function () {
            $('#sendMessage').click(function () {
                hub.server.sendRooms('Hello');
            });
        });

        $('#sendMessage').click(function () {
            $('#sendMessage').val(123);
            alert("click!");
           // hub.server.sendRooms('Hello');
        });

    });

</script>



